.purchase-main
  .purchase-header
    .purchase-header__block
      = render 'items/subheader'
.content
  .content__title
    %h1 クレジットカード情報入力
  .content__credit-card
    .content__credit-card__inner
      = form_with url: cards_path, method: :post, html: { name: "inputForm" } do |f| # createアクションのパスを指定
        .cards-number
          = f.label :カード番号, class: 'label'
          %span.form_require 必須
          = f.text_field :card_number, type: 'text', class: 'input-number', placeholder: '半角数字のみ', maxlength: "16"
        %ul.signup-card-list
          %li
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1696431247", :width => "49"}/
          %li
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1696431247", :width => "34"}/
          %li
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1696431247", :width => "30"}/
          %li
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1696431247", :width => "32"}/
          %li
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1696431247", :width => "21"}/
          %li
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1696431247", :width => "32"}/
          %li
            %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1696431247", :width => "32"}/
        .cards-expire
          = f.label :有効期限, class: 'label'
          %span.form_require 必須
          %br
          .cards-expire__wrap
            = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-expire'
            %span.expire-text 月
            %br
          .cards-expire__wrap
            = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'input-expire'
            %span.expire-text 年
        .cards-expire
          = f.label :セキュリティコード, class: 'label'
          %span.form_require 必須
          = f.text_field :cvc, type: 'text', class: 'input-number', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"
        .content-bottom#card_token
          = f.submit '追加する', class: 'content-bottom--add-btn', id: 'token_submit'
= render "items/subfooter"