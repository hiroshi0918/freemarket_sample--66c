.contents
  .header
    .fmarket
      .fmarket
    = render 'items/subheader'
  .single
    .single__head
      %h1
        クレジットカード情報入力
    .single-box-wx
      .single-box24
        = form_tag(cards_path, method: :post, id: 'charge-form', name: "inputForm") do |f|
          %li
            %label{class:'box-group--label', for: 'card_number'} カード番号
            %span.single-box25
              必須
            = text_field_tag "number", "", class: 'card-number--input', type: "text", id: 'card_number', maxlength: "16", placeholder: "半角数字のみ"
            .registration-error{type: "hidden", value: "必須項目です"}
            
        .ic2
          .card1
          .card2
          .card3
          .card4
          .card5
          .card6
          .card7
        .single-box26
          %li
            %label.box-group--label 有効期限
            %span.single-box27
              必須
            .card-expire
              .card-expire__select-month
                %select#exp_month{name: "exp_month", type: "text"}
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %i.card-form-expire-icon
                  -# = image_tag "arrow-bottom.png", size:"16x10",class:"arrow-bottom-icon5"
                %span{class: "month"} 月
              .card-expire__select-year
                %select#exp_year{name: "exp_year", type: "text"}
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %i.card-form-expire-icon
                  -# = image_tag "arrow-bottom.png", size: "16x10",class:"arrow-bottom-icon6"
                %span{class:"year"} 年

        .single-box28
          %li
            %label.box-group--label{for: "cvc"} セキュリティーコード
            %span.input-require
              必須
            = text_field_tag "cvc", "", class: 'payment__security-code', type: "text", id: "cvc", maxlength: "4" ,placeholder: "カード背面４桁もしくは３桁の番号"
            .question-form
              %span.message4
                %p
                カード裏面の番号とは？
          #card_token
          = submit_tag "追加する", class: "button_box3", id: "token_submit", type: 'button'

  .footer
    %ul.footer__box
      %li= link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
      %li= link_to "フリマ利用規約", "https://www.mercari.com/jp/tos/"
      %li= link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
    .footer__box2
      = link_to root_path do
        = image_tag "fmarket_logo_white.svg" , height: "60", width: "150"
    .footer__box3
      © 2019 Mercari
