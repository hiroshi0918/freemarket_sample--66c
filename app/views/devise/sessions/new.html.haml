.main
  .header
    =image_tag "fmarket_logo_red.svg",width:"185",height:"50",class:"logo_icon"
  .signin_main
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .signin_main__content
        .signin_main__content__box
          .signin_main__content__box__sign_up
            %p アカウントをお持ちでない方はこちら
          .signin_main__content__box__btn
            =link_to '新規会員登録',"#",class:"sign_up_box"
        .signin_main__content__icon
          = render "devise/shared/links"
        .signin_main__content__infomation
          .signin_main__content__infomation__mail
            = f.email_field :email, autofocus: true, autocomplete: "email",placeholder:' メールアドレス',class:"mail_input"
          .signin_main__content__infomation__pass
            = f.password_field :password, autocomplete: "current-password",placeholder:' パスワード',class:"password_input"
          .signin_main__content__infomation__login
            = f.submit "ログイン" ,class:"login_btn"
          .signin_main__content__infomation__coment      
            =link_to "パスワードをお忘れの方","#",class:"forget_pass"  

