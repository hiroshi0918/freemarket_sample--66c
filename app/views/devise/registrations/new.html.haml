-# 基本的な個人情報入力フォーム
.steppage
  -# 入力フォーム全体
  .MemberInformationInput
    -# 入力フォームのタイトル
    .MemberInformationInput__title
      会員情報入力
      -# 入力フォーム中身書き換え
    .MemberInformationInput__content
      .MemberInformationInput__content--form
        = form_for(@user, url: user_registration_path) do |f|
          = render "devise/shared/error_messages", resource: @user
          -# ニックネーム入力
          .field
            = f.label :ニックネーム
            %span.form_require
              必須
            %br/
            = f.text_field :nickname, placeholder: "例) メルカリ太郎", class: "input_default"
            -# メールアドレス
            .field
            = f.label :メールアドレス
            %span.form_require
              必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"PC・携帯どちらでも可", class: "input_default"
            
          -# パスワード入力
          - if @sns_id.present?
            = hidden_field_tag :sns_auth, true
          - else
            .field
              = f.label :パスワード
              %span.form_require
                必須
              %br/
              = f.password_field :password, autofocus: true, autocomplete: "password", placeholder: "7文字以上の半角英数字", class: "input_default"
              %p.form_info
                ※ 英字と数字の両方を含めて設定してください
              %input#password-check{type: "checkbox"}
              %span
                パスワードを表示する
