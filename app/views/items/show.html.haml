  .item-buttons.clearfix
    .item-buttons--left
      %button.item-btn
        %i.far.fa-heart
        %span
          いいね!
        %span
          3
      =link_to class: "item-btn report" do
        %i.far.fa-flag
        %span 不適切な内容の報告
    .item-buttons--right
      = link_to "https://www.mercari.com/jp/safe/description/" do
        %i.fas.fa-lock
        %span あんしん・あんぜんへの取り組み


.item-comments
  .item-comments__content
    .item-comments__content__form.clearfix
      %ul
        %li
          =link_to do
            %figure
              %div
                = image_tag "mako2.jpg"
              %figcaption
                真子
          .message
            .message__text
              購入します。
            .message__time
              %time
                %i.far.fa-clock
                %span
                  2時間前
              %i.far.fa-flag
    .item-comments__content__form
      %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
      %textarea.item-comments__content__form--box
      %button.submit
        %span コメントする


.move-link.clearfix
  = link_to '前の商品', 'http://www.google.co.jp/',class: "move-link--prev"
  = link_to '次の商品', 'http://www.google.co.jp/',class: "move-link--next"


.sns-list
  .sns-list--boxes
    %li
      = link_to "https://www.facebook.com/", class: "contents__btn" do
        %i.fab.fa-facebook-square
    %li
      = link_to "https://www.twitter.com/", class: "contents__btn" do
        %i.fab.fa-twitter
    %li
      = link_to "https://www.line.com/", class: "contents__btn" do
        %i.fab.fa-line
    %li
      = link_to "https://www.pinterest.com/", class: "contents__btn" do
        %i.fab.fa-pinterest

.recommends
  .recommends__user
    .recommends__user__head
      =link_to "#" do
        hogehogeさんのその他の出品
    .recommends__user__items
      = 6.times do
        = render partial: 'elseitems'
  .recommends__user
    .recommends__user__head
      =link_to "#" do
        シャネルのその他の商品
    .recommends__user__items
      = 6.times do
        = render partial: 'elseitems'
    .recommends__categories__items
.bread-crumbs
  %ul.bread-crumbs__box
    %li
      =link_to 'メルカリ'
      %i.fas.fa-chevron-right
    %li
      =link_to 'イチゴ大福６個入り'

= render 'toppage/footer'