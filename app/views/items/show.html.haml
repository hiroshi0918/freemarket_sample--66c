= render 'toppage/header'
%section.item-container
  .item-name
    = @item.name
  .item-content.clearfix
    .item-content__photo
      .item-content__photo--top
        =image_tag @item.images[0].image.url ,class:"big_image"
            
      .item-content__photo--bottom
        - @item.images.each do |image|
          .item-content__photo--bottom__pic
            = image_tag image.image.url,class:"mini_image" 

    %table.item-content__table
      %tr
        %th
          出品者
        %td
          =link_to do
            = @user.nickname
          .rating
            .rating__counts
              %i.far.fa-laugh
              .rating__counts--good
                1
            .rating__counts
              %i.far.fa-meh
              .rating__counts--normal
                1
            .rating__counts
              %i.far.fa-frown
              .rating__counts--bad
                1
      %tr
        %th
          カテゴリー
        %td
          =link_to do
            %div
              = @item.category.name
          =link_to do
            %div
              -# = @parents.children.name
          =link_to do
            %div
              
      %tr
        %th
          ブランド
        %td
          =link_to do
            =@brand.name
      %tr
        %th
          商品の状態
        %td
          = @item.condition
      %tr
        %th
          配送料の負担
        %td
          = @item.postage
      %tr
        %th
          配送の方法
        %td
          = @item.delivery_method
      %tr
        %th
          発送元地域
        %td
          =link_to do
            =@item.region
      %tr
        %th
          発送日の目安
        %td
          = @item.shipping_date
  .item-price 
    %span.item-price--yen
      ="¥#{@item.price}"
    %span.item-price--tax
      = @item.postage

  = link_to '購入画面に進む', items_path ,class: "buy-btn"
