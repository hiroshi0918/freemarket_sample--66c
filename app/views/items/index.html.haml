.purchase-main
  .purchase-header
    .purchase-header__block
      = render 'items/subheader'
  //ボディーの部分
  .purchase-body
    .purchase-body__list
      -@items.each do |item|
        .purchase-body__verification
          購入内容の確認
        .purchase-body__payment
          = image_tag "fuku.jpg", size: "80x80"
          .purchase-body__payment__info
            .purchase-body__payment__info__brand
              = item.name
            .purchase-body__payment__info__money
              = "¥#{item.price}(税込)送料込み"
        .purchase-body__total
          .purchase-body__total__price
            支払い金額
          .purchase-body__total__moeny2
            = "¥#{item.price}"
        .purchase-body__checkbox
          = check_box_tag :test1
          = label_tag :test1, "ポイントを使用(所持ポイント:P0)" 
        .purchase-body__total2
          .purchase-body__total2__method
            支払い方法
          .purchase-body__total2__register
            = link_to card_mypages_path, class: "card_link" do
              .purchase-body__total2__register__link__word
                登録してください
        .purchase-body__delivery
          .purchase-body__delivery__area
            配送先
          = link_to "#", class: "purchase-body__delivery__change" do
            変更する
        .purchase-body__address
          〒000-0000
          %br
          神奈川県川崎市宮前区５−５−５
          %br
          福留 稔也
        .purchase-body__buy
          = link_to item_path(item.id), class: "item_link" do
            .purchase-body__buy__btn
              購入する
  = render 'items/subfooter'